{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/naming-convention": "warn",
        "@typescript-eslint/semi": [
            "warn",
            "never"
        ],
        "@typescript-eslint/indent": [
            "warn",
            4
        ],
        "curly": "warn",
        "eqeqeq": "warn",
        "no-throw-literal": "warn",
        "semi": [
            "warn",
            "never"
        ],
        "indent": [
            "warn",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "no-unused-vars": "warn",
        "object-shorthand": "warn",
        "prefer-arrow-callback": "warn",
        "no-param-reassign": "error",
        "no-trailing-spaces": "warn",
        "no-shadow": [
            "error",
            {
                "allow": [
                    "ExtConfig",
                    "LibActions"
                ]
            }
        ]
    },
    "ignorePatterns": [
        "out",
        "dist",
        "**/*.d.ts"
    ]
}
