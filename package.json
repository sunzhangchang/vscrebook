{
	"name": "vscrebook",
	"displayName": "vscrebook",
	"description": "VSCode 摸鱼阅读器",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.61.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"txt",
		"novel",
		"book",
		"小说",
		"神器",
		"摸鱼",
		"划水"
	],
	"publisher": "Cyanogenaq",
	"activationEvents": [
		"*"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"configuration": {
			"title": "Vscre Book",
			"type": "object",
			"properties": {
				"vscrebook.curPageNumber": {
					"type": "number",
					"default": 1,
					"description": "当前小说页数(支持跳转) & Pages of Current Novels (Support jumping)"
				},
				"vscrebook.pageSize": {
					"type": "number",
					"default": 25,
					"description": "每页文字数量 & Number of text per page"
				},
				"vscrebook.lineBreak": {
					"type": "string",
					"default": " ",
					"description": "换行分隔符号，默认一个空格 & Line Break Separation Symbol,Default a space"
				},
				"vscrebook.filePath": {
					"type": "string",
					"default": "",
					"description": "TXT格式小说绝对路径 & Absolute Path of TXT Format Novels"
				}
			}
		},
		"commands": [
			{
				"command": "vscrebook.displayCode",
				"title": "displayCode"
			},
			{
				"command": "vscrebook.prevPage",
				"title": "prevPage"
			},
			{
				"command": "vscrebook.nextPage",
				"title": "nextPage"
			},
			{
				"command": "vscrebook.jumpPage",
				"title": "jumpPage"
			},
			{
				"command": "vscrebook.refresh",
				"title": "refresh"
			}
		],
		"keybindings": [
			{
				"command": "vscrebook.displayCode",
				"key": "ctrl+alt+/",
				"mac": "cmd+/"
			},
			{
				"command": "vscrebook.prevPage",
				"key": "ctrl+alt+,",
				"mac": "cmd+,",
				"when": "editorTextFocus"
			},
			{
				"command": "vscrebook.nextPage",
				"key": "ctrl+alt+.",
				"mac": "cmd+.",
				"when": "editorTextFocus"
			},
			{
				"command": "vscrebook.jumpPage",
				"key": "ctrl+alt+'",
				"mac": "cmd+'",
				"when": "editorTextFocus"
			},
			{
				"command": "vscrebook.refresh",
				"key": "ctrl+alt+;",
				"mac": "cmd+;"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p -w . --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.61.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^4.31.1",
		"@typescript-eslint/parser": "^4.31.1",
		"eslint": "^7.32.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.1",
		"typescript": "^4.4.3",
		"ts-loader": "^9.2.5",
		"webpack": "^5.52.1",
		"webpack-cli": "^4.8.0",
		"@vscode/test-electron": "^1.6.2"
	},
    "bugs": {
        "url": "https://github.com/sunzhangchang/vscrebook/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/sunzhangchang/vscrebook"
    },
    "homepage": "https://github.com/sunzhangchang/vscrebook/blob/main/README.md"
}
