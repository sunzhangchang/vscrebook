{
  "name": "vscrebook",
  "displayName": "vscrebook",
  "description": "VSCode 摸鱼阅读器",
  "version": "0.10.0",
  "engines": {
    "vscode": "^1.63.1"
  },
  "icon": "images/icon.png",
  "categories": [
    "Other"
  ],
  "keywords": [
    "txt",
    "novel",
    "book",
    "小说",
    "神器",
    "摸鱼",
    "划水"
  ],
  "publisher": "Cyanogenaq",
  "activationEvents": [
    "onCommand:vscrebook.showMenu"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Vscre Book",
      "type": "object",
      "properties": {
        "vscrebook.pageSize": {
          "type": "number",
          "default": 25,
          "description": "每页显示字数"
        },
        "vscrebook.downloadPath": {
          "type": "string",
          "default": "~/downloads",
          "description": "下载的小说的储存路径"
        },
        "vscrebook.autoFlipTime": {
          "type": "number",
          "default": "3000",
          "description": "自动翻页的速度(每页的时间/ms)"
        },
        "vscrebook.displayMode": {
          "type": "string",
          "enum": [
            "statusBar",
            "showInformation"
          ],
          "default": "statusBar",
          "description": "显示小说文字的方式"
        },
        "vscrebook.statusConfig": {
          "type": "object",
          "default": {},
          "properties": {
            "caimoge": {
              "type": "boolean",
              "default": true
            },
            "wbxsw": {
              "type": "boolean",
              "default": false
            }
          },
          "description": "设置网络书籍中是否显示书籍更新状态"
        }
      }
    },
    "commands": [
      {
        "command": "vscrebook.showMenu",
        "title": "menu 打开 vscrebook 菜单"
      },
      {
        "command": "vscrebook.bossKey",
        "title": "bossKey"
      },
      {
        "command": "vscrebook.prevPage",
        "title": "prevPage"
      },
      {
        "command": "vscrebook.nextPage",
        "title": "nextPage"
      },
      {
        "command": "vscrebook.jumpPage",
        "title": "jumpPage"
      },
      {
        "command": "vscrebook.autoFlip",
        "title": "autoFlip"
      }
    ],
    "keybindings": [
      {
        "command": "vscrebook.showMenu",
        "key": "ctrl+alt+;",
        "mac": "cmd+;"
      },
      {
        "command": "vscrebook.bossKey",
        "key": "ctrl+alt+/",
        "mac": "cmd+/"
      },
      {
        "command": "vscrebook.prevPage",
        "key": "ctrl+alt+,",
        "mac": "cmd+,"
      },
      {
        "command": "vscrebook.nextPage",
        "key": "ctrl+alt+.",
        "mac": "cmd+."
      },
      {
        "command": "vscrebook.jumpPage",
        "key": "ctrl+alt+'",
        "mac": "cmd+'"
      },
      {
        "command": "vscrebook.autoFlip",
        "key": "ctrl+alt+m",
        "mac": "cmd+m"
      }
    ]
  },
  "scripts": {
    "clear": "gulp clear",
    "vscode:prepublish": "gulp clear && npm run build",
    "build:debug": "gulp dev",
    "build": "gulp prod",
    "watch": "gulp watch",
    "package": "vsce package",
    "vsce:publish": "vsce publish",
    "vsce:package": "vsce package",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p -w . --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@swc/core": "^1.2.127",
    "@swc/helpers": "^0.3.2",
    "@types/lodash": "^4.14.178",
    "@types/node": "~14.18.5",
    "@types/vscode": "^1.63.1",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "@vscode/test-electron": "^1.6.2",
    "core-js": "^3.20.2",
    "esbuild": "^0.14.14",
    "esbuild-loader": "^2.18.0",
    "eslint": "^7.32.0",
    "fancy-log": "^2.0.0",
    "gulp": "^4.0.2",
    "plugin-error": "^1.0.1",
    "regenerator-runtime": "^0.13.9",
    "swc-loader": "^0.1.15",
    "typescript": "4.4.4",
    "vsce": "^2.7.0",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1"
  },
  "bugs": {
    "url": "https://github.com/sunzhangchang/vscrebook/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sunzhangchang/vscrebook"
  },
  "homepage": "https://github.com/sunzhangchang/vscrebook/blob/main/README.md",
  "dependencies": {
    "@types/iconv-lite": "^0.0.1",
    "axios": "^0.26.1",
    "chardet": "^1.4.0",
    "cheerio": "^1.0.0-rc.10",
    "iconv-lite": "^0.6.3",
    "lodash": "^4.17.21"
  }
}
