{
  "name": "vscrebook",
  "displayName": "vscrebook",
  "description": "VSCode 摸鱼阅读器",
  "version": "0.15.0",
  "engines": {
    "vscode": "^1.68.1"
  },
  "icon": "images/icon.png",
  "categories": [
    "Other"
  ],
  "keywords": [
    "txt",
    "novel",
    "book",
    "小说",
    "神器",
    "摸鱼",
    "划水"
  ],
  "publisher": "Cyanogenaq",
  "activationEvents": [
    "onCommand:vscrebook.showMenu"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Vscre Book",
      "type": "object",
      "properties": {
        "vscrebook.pageSize": {
          "type": "number",
          "default": 25,
          "description": "每页显示字数"
        },
        "vscrebook.downloadPath": {
          "type": "string",
          "default": "~/downloads",
          "description": "下载的小说的储存路径"
        },
        "vscrebook.autoFlipTime": {
          "type": "number",
          "default": "3000",
          "description": "自动翻页的速度(每页的时间/ms)"
        },
        "vscrebook.displayMode": {
          "type": "string",
          "enum": [
            "statusBar",
            "showInformation"
          ],
          "default": "statusBar",
          "description": "显示小说文字的方式"
        },
        "vscrebook.showMoreInfo": {
          "type": "object",
          "default": {},
          "properties": {
            "caimoge": {
              "type": "boolean",
              "default": true
            },
            "wbxsw": {
              "type": "boolean",
              "default": false
            },
            "aixiashu": {
              "type": "boolean",
              "default": false
            }
          },
          "description": "设置网络书籍中是否显示书籍更多信息"
        },
        "vscrebook.downloadSettings": {
          "type": "object",
          "default": {},
          "properties": {
            "采墨阁": {
              "type": "string",
              "enum": [
                "disable",
                "txtOnly",
                "chaptersOnly",
                "txt & chapters"
              ],
              "default": "txt & chapters"
            },
            "58小说网": {
              "type": "string",
              "enum": [
                "disable",
                "txtOnly",
                "chaptersOnly",
                "txt & chapters"
              ],
              "default": "chaptersOnly"
            },
            "爱下书小说网": {
              "type": "string",
              "enum": [
                "disable",
                "txtOnly",
                "chaptersOnly",
                "txt & chapters"
              ],
              "default": "txt & chapters"
            }
          },
          "description": "网络书籍下载设置"
        },
        "vscrebook.downThreadAmount": {
          "type": "number",
          "default": 20,
          "description": "下载线程数"
        }
      }
    },
    "commands": [
      {
        "command": "vscrebook.showMenu",
        "title": "vscrebook: menu 打开 vscrebook 菜单"
      },
      {
        "command": "vscrebook.bossKey",
        "title": "vscrebook: bossKey"
      },
      {
        "command": "vscrebook.prevPage",
        "title": "vscrebook: prevPage"
      },
      {
        "command": "vscrebook.nextPage",
        "title": "vscrebook: nextPage"
      },
      {
        "command": "vscrebook.jumpPage",
        "title": "vscrebook: jumpPage"
      },
      {
        "command": "vscrebook.autoFlip",
        "title": "vscrebook: autoFlip"
      },
      {
        "command": "vscrebook.search",
        "title": "vscrebook: search"
      }
    ],
    "keybindings": [
      {
        "command": "vscrebook.showMenu",
        "key": "ctrl+alt+;",
        "mac": "cmd+;"
      },
      {
        "command": "vscrebook.bossKey",
        "key": "ctrl+alt+/",
        "mac": "cmd+/"
      },
      {
        "command": "vscrebook.prevPage",
        "key": "ctrl+alt+,",
        "mac": "cmd+,"
      },
      {
        "command": "vscrebook.nextPage",
        "key": "ctrl+alt+.",
        "mac": "cmd+."
      },
      {
        "command": "vscrebook.jumpPage",
        "key": "ctrl+alt+'",
        "mac": "cmd+'"
      },
      {
        "command": "vscrebook.autoFlip",
        "key": "ctrl+alt+m",
        "mac": "cmd+m"
      },
      {
        "command": "vscrebook.search",
        "key": "ctrl+alt+l",
        "mac": "cmd+l"
      }
    ]
  },
  "scripts": {
    "clear": "gulp clear",
    "vscode:prepublish": "npm run build",
    "build:debug": "gulp dev",
    "build": "gulp prod",
    "watch": "gulp watch",
    "package": "vsce package",
    "vsce:publish": "vsce publish",
    "vsce:package": "vsce package",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p -w . --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@swc/core": "^1.2.215",
    "@swc/helpers": "^0.4.3",
    "@types/lodash": "^4.14.182",
    "@types/node": "^16.11.44",
    "@types/vscode": "^1.68.1",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "@vscode/test-electron": "^2.1.5",
    "esbuild": "^0.14.49",
    "esbuild-loader": "^2.19.0",
    "eslint": "^8.19.0",
    "fancy-log": "^2.0.0",
    "gulp": "^4.0.2",
    "plugin-error": "^2.0.0",
    "regenerator-runtime": "^0.13.9",
    "swc-loader": "^0.2.3",
    "typescript": "^4.7.4",
    "vsce": "^2.9.3",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0"
  },
  "bugs": {
    "url": "https://github.com/sunzhangchang/vscrebook/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sunzhangchang/vscrebook"
  },
  "homepage": "https://github.com/sunzhangchang/vscrebook/blob/main/README.md",
  "dependencies": {
    "axios": "^0.27.2",
    "axios-retry": "^3.3.1",
    "chardet": "^1.4.0",
    "cheerio": "^1.0.0-rc.12",
    "core-js": "^3.23.4",
    "iconv-lite": "^0.6.3",
    "lodash": "^4.17.21"
  }
}
